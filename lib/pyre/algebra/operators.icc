#if !defined(pyre_algebra_operators_h)
#error This header file contains implementation details for the algebraic operators
#else


// binary operators
template <typename numeric_t>
numeric_t
pyre::algebra::operator+(const numeric_t & a, const numeric_t & b)
{
    numeric_t result(a);
    result += b;
    return result;
}


template <typename numeric_t>
numeric_t
pyre::algebra::operator-(const numeric_t & a, const numeric_t & b)
{
    numeric_t result(a);
    result -= b;
    return result;
}


template <typename numeric_t>
numeric_t
pyre::algebra::operator*(const numeric_t & a, const numeric_t & b)
{
    numeric_t result(a);
    result *= b;
    return result;
}


template <typename numeric_t>
numeric_t
pyre::algebra::operator/(const numeric_t & a, const numeric_t & b)
{
    numeric_t result(a);
    result /= b;
    return result;
}


#endif


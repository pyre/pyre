// metamethods
// constructor
template <class sourceT>
pyre::viz::filters::Amplitude<sourceT>::Amplitude(source_const_reference source) : _source(source)
{}


// interface
template <class sourceT>
auto
pyre::viz::filters::Amplitude<sourceT>::operator*() const -> value_type
{
    // easy enough: compute the magnitude of whatever my source is pointing to
    return std::abs(*_source);
}


template <class sourceT>
auto
pyre::viz::filters::Amplitude<sourceT>::operator++() -> void
{
    // increment my source
    ++_source;
    // all done
    return;
}



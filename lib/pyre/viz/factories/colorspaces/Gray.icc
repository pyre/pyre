// code guard
#pragma once


// factory
auto
pyre::viz::factories::colorspaces::Gray::create() -> factory_ref_type
{
    // build an instance and wrap it in a shared pointer
    auto ref = std::make_shared<Gray>(sentinel_type());
    // make a channel
    auto channel = pyre::journal::debug_t("pyre.viz.factories.colorspaces.bmp.create");
    // show me
    channel
        // the factory
        << "gray " << ref.get() << ": create"
        << pyre::journal::newline
        // flush
        << pyre::journal::endl(__HERE__);
    // return it
    return ref;
}

// constructor
pyre::viz::factories::colorspaces::Gray::Gray(sentinel_type sentinel) :
    // superclass
    base_type(sentinel)
{}


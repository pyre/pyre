// (temporary) tensor minus (temporary) tensor
template <typename T, class packingT1, class packingT2, int... I>
constexpr auto
pyre::tensor::operator-(Tensor<T, packingT1, I...> && y1, Tensor<T, packingT2, I...> && y2) -> auto

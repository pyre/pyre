pyre::tensor::operator/(const Tensor<T, packingT, I...> & y, T2 a) -> Tensor<T, packingT, I...>
    requires(Tensor<T, packingT, I...>::size != 1 && std::convertible_to<T2, T>)
{
    return (1.0 / a) * y;
}


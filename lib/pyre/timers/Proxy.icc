}


template <class timerT, class clockT>
auto
pyre::timers::Proxy<timerT, clockT>::
us() const
{
    // delegate
    return _movement.us();
}


// syntactic sugar
template <class timerT, class clockT>
pyre::timers::Proxy<timerT, clockT>::
operator active_type() const
{
    // delegate
    return active_type(_movement);
}


